TcpProxySession.onListen()
{
	if (m_listenerState)
		stopListen();
	else
		try listen();
}

TcpProxySession.onTargetAddressChanged()
{
	cancelResolve();
	m_resolverState = ResolverState.Idle;
	m_targetAddressCombo.m_backgroundColor = ui.StdColor.White;
}

bool errorcode TcpProxySession.listen()
{
	stopListen();
	startSession();

	m_portCombo.addEditTextToHistory();

	io.SocketAddress address = *(io.SocketAddress const*)m_adapterCombo.m_currentData;
	address.m_port = (uint16_t)atoi(m_portCombo.m_editText);

	m_listenerSocket.open(io.Protocol.Tcp, &address);
	m_listenerSocket.listen();

	address = m_listenerSocket.m_address;
	m_logWriter.write(SocketLogRecordCode.Listening, &address, sizeof(address));
	m_localAddress = address;
	m_listenerState = ListenerState.Listening;
	waitListenerSocketEvents();
	m_stdSessionInfoSet.startSession(m_pluginHost.m_mainThreadScheduler);
	return true;

catch:
	m_logWriter.writeLastError(SocketLogRecordCode.ListenError);
	m_listenerSocket.close();
	m_listenerState = ListenerState.Closed;
	m_listenerSyncId++;
	m_stdSessionInfoSet.endSession();
	return false;
}

bool errorcode TcpProxySession.resolve()
{
	cancelResolve();

	m_targetAddressCombo.addEditTextToHistory();
	char const* addressString = m_targetAddressCombo.m_editText;

	io.SocketAddress address;
	bool isDirectAddress = try address.parse(addressString);
	if (isDirectAddress)
	{
		if (!address.m_port)
			address.m_port = m_connectionSocketPropertySet.m_remotePortProp.m_value;

		m_targetAddress = address;
		m_resolverState = ResolverState.Resolved;
		return true;
	}

	m_logWriter.write(SocketLogRecordCode.Resolving, addressString);
	m_resolver.resolve(addressString);

	m_resolver.wait(
		io.HostNameResolverEvents.Resolved | io.HostNameResolverEvents.Error,
		onResolverEvent~(++m_resolverSyncId) @ m_pluginHost.m_mainThreadScheduler
		);

	m_resolverState = ResolverState.Resolving;
	return true;

catch:
	handleResolveError(std.getLastError());
	return false;
}

void TcpProxySession.cancelResolve()
{
	if (m_resolverState != ResolverState.Resolving)
		return;

	m_logWriter.write(SocketLogRecordCode.ResolveCancelled);

	std.MapEntry const* entry = m_resolverWaitSet.m_head;
	while (entry)
	{
		Client* client = entry.m_value;
		entry = entry.m_next;
		disconnect(client);
	}

	m_resolver.cancel();
	m_resolverSyncId++;
	m_resolverState = ResolverState.Idle;
}

TcpProxySession.stopListen()
{
	if (!m_listenerState)
		return;

	m_logWriter.write(SocketLogRecordCode.ListenStopped, &m_localAddress, sizeof(m_localAddress));
	m_listenerSocket.close();
	m_listenerState = ListenerState.Closed;
	m_listenerSyncId++;
	m_stdSessionInfoSet.endSession();
}

TcpProxySession.disconnectAll()
{
	while (m_clientList.m_count)
		disconnect(m_clientList.m_head.m_data);
}

TcpProxySession.disconnect(TcpProxySession.Client* client)
{
	TcpDisconnectLogRecordParams params;
	params.m_address = client.m_clientAddress;
	params.m_flags = 0;

	if (m_connectionSocketPropertySet.m_tcpResetProp.m_value)
		params.m_flags |= TcpDisconnectLogRecordFlags.Reset;

	m_logWriter.write(SocketLogRecordCode.ClientDisconnected, &params, sizeof(params));
	removeClient(client);
}

void TcpProxySession.addClient(TcpProxySession.Client* client)
{
	client.m_entry = m_clientList.add(client);
	m_clientCount = m_clientList.m_count;
	m_currentClientAddress = client.m_clientAddress;
}

void TcpProxySession.removeClient(TcpProxySession.Client* client)
{
	client.m_clientState = ConnectionState.Closed;
	client.m_clientSocket.close();
	client.m_clientSyncId++;
	client.m_targetState = ConnectionState.Closed;
	client.m_targetSocket.close();
	client.m_targetSyncId++;

	m_clientList.remove(client.m_entry);
	m_clientCount = m_clientList.m_count;
	m_currentClientAddress = null;
}

void TcpProxySession.setCurrentClient(TcpProxySession.Client* client)
{
	if (m_currentClientAddress.isEqual(client.m_clientAddress))
		return;

	m_logWriter.write(
		SocketLogRecordCode.ClientChanged,
		&client.m_clientAddress,
		sizeof(client.m_clientAddress)
		);

	m_currentClientAddress = client.m_clientAddress;
}

bool errorcode TcpProxySession.applyClientFilter(bool rebuildLog)
{
	m_pluginHost.m_log.suspend();
	bool result = try m_filter.setFilter(m_clientFilterCombo.m_editText);
	m_pluginHost.m_log.resume();

	if (!result)
	{
		m_clientFilterCombo.m_backgroundColor = ui.StdColor.PastelRed;
		return false;
	}

	m_clientFilterCombo.addEditTextToHistory();
	m_clientFilterCombo.m_backgroundColor = ui.ColorFlags.Transparent;

	if (rebuildLog)
		m_pluginHost.m_log.rebuild();

	return true;
}

bool errorcode TcpProxySession.connectTarget(TcpProxySession.Client* client)
{
	if (m_resolverState == ResolverState.Idle)
		resolve(); // and then inspect resolver state again

	switch (m_resolverState)
	{
	case ResolverState.Resolved:
		break;

	case ResolverState.Resolving:
		m_resolverWaitSet.add(client, null);
		return true;

	default:
		assert(false);
	}

	m_logWriter.write(SocketLogRecordCode.Connecting, &m_targetAddress, sizeof(m_targetAddress));
	client.m_targetSocket.open(m_targetAddress.m_family, io.Protocol.Tcp);
	client.m_targetSocket.connect(&m_targetAddress);
	client.m_targetState = ConnectionState.Connecting;
	waitTargetSocketEvents(client);
	return true;
}

void TcpProxySession.load(doc.Storage* storage)
{
	m_portCombo.loadHistory(storage, "portHistory");
	m_targetAddressCombo.loadHistory(storage, "targetAddressHistory");
	m_adapterCombo.m_currentIndex  = storage.readInt("adapterIdx");
	m_portCombo.m_editText = storage.readString("port");
	m_targetAddressCombo.m_editText = storage.readString("targetAddress");

	m_listenerSocketPropertySet.load(storage);
	m_connectionSocketPropertySet.load(storage);
	m_bufferPropertySet.load(storage);
	m_readBuffer.setSize(m_bufferPropertySet.m_readBufferSizeProp.m_value);
}

void TcpProxySession.save(doc.Storage* storage)
{
	m_portCombo.saveHistory(storage, "portHistory");
	m_targetAddressCombo.saveHistory(storage, "targetAddressHistory");

	m_listenerSocketPropertySet.save(storage);
	m_connectionSocketPropertySet.save(storage);
	m_bufferPropertySet.save(storage);

	storage.writeInt("adapterIdx", (int) m_adapterCombo.m_currentIndex);
	storage.writeString("port", m_portCombo.m_editText);
	storage.writeString("targetAddress", m_targetAddressCombo.m_editText);
}

void TcpProxySession.updateProperties()
{
	m_listenerSocketPropertySet.m_adapterProp.m_currentIndex = m_adapterCombo.m_currentIndex;
	m_listenerSocketPropertySet.m_localPortProp.m_value = atoi(m_portCombo.m_editText);
	m_connectionSocketPropertySet.m_remoteAddressProp.m_value = m_targetAddressCombo.m_editText;
}

bool errorcode TcpProxySession.applyProperties()
{
	m_adapterCombo.m_currentIndex = m_listenerSocketPropertySet.m_adapterProp.m_currentIndex;
	m_portCombo.m_editText = $"$(m_listenerSocketPropertySet.m_localPortProp.m_value)";
	m_targetAddressCombo.m_editText = m_connectionSocketPropertySet.m_remoteAddressProp.m_value;
	m_readBuffer.setSize(m_bufferPropertySet.m_readBufferSizeProp.m_value);
	return true;
}

void TcpProxySession.restoreDefaultProperties()
{
	m_listenerSocketPropertySet.restoreDefaults();
	m_connectionSocketPropertySet.restoreDefaults();
	m_bufferPropertySet.restoreDefaults();
}

TcpProxySession.onListenerSocketEvent(
	uint_t syncId,
	io.SocketEvents triggeredEvents
	)
{
	if (syncId != m_listenerSyncId)
		return;

	if (triggeredEvents & io.SocketEvents.IoError)
	{
		m_logWriter.write(log.StdRecordCode.Error, m_listenerSocket.m_ioError);
		m_listenerSocket.close();
		m_listenerState = ListenerState.Closed;
		m_stdSessionInfoSet.endSession();
		return;
	}

	if (triggeredEvents & io.SocketEvents.IncomingConnection)
	{
		io.SocketAddress address;
		io.Socket* socket = m_listenerSocket.accept(&address, true);
		m_logWriter.write(SocketLogRecordCode.ClientConnected, &address, sizeof(address));

		socket.m_readParallelism = m_bufferPropertySet.m_readParallelismProp.m_value;
		socket.m_readBlockSize = m_bufferPropertySet.m_readBlockSizeProp.m_value;
		socket.m_readBufferSize = m_bufferPropertySet.m_readBufferSizeProp.m_value;
		socket.m_writeBufferSize = m_bufferPropertySet.m_writeBufferSizeProp.m_value;
		socket.m_options = ui.getSocketOptions(m_connectionSocketPropertySet, m_bufferPropertySet);
		socket.unsuspend();

		Client* client = new Client;
		client.m_clientState = ConnectionState.Connected;
		client.m_clientSocket = socket;
		client.m_clientAddress = address;

		addClient(client);
		waitClientSocketEvents(client);

		bool result = try connectTarget(client);
		if (!result)
		{
			handleConnectError(client, std.getLastError());
			removeClient(client);
		}
	}

	waitListenerSocketEvents();
}

TcpProxySession.onClientSocketEvent(
	TcpProxySession.Client* client,
	uint_t syncId,
	io.SocketEvents triggeredEvents
	)
{
	if (syncId != client.m_clientSyncId)
		return;

	if (triggeredEvents & io.SocketEvents.IoError)
	{
		setCurrentClient(client);
		m_logWriter.write(log.StdRecordCode.Error, client.m_clientSocket.m_ioError);
		disconnect(client);
		return;
	}

	if (triggeredEvents & io.SocketEvents.Disconnected)
	{
		for (;;) // read all the buffered data
		{
			size_t result = forwardDataFromTargetToClient(client);
			if (!result)
				break;
		}

		if (client.m_targetState == ConnectionState.Connected)
			client.m_targetSocket.blockingWait(io.SocketEvents.WriteBufferEmpty, Defaults.TxDisconnectTimeout);

		TcpDisconnectLogRecordParams params;
		params.m_address = client.m_clientAddress;
		params.m_flags = TcpDisconnectLogRecordFlags.Remote;

		if (triggeredEvents & io.SocketEvents.Reset)
			params.m_flags |= TcpDisconnectLogRecordFlags.Reset;

		m_logWriter.write(SocketLogRecordCode.Disconnected, &params, sizeof(params));
		disconnect(client);
		return;
	}

	if (triggeredEvents & io.SocketEvents.IncomingData)
		forwardDataFromClientToTarget(client);

	waitClientSocketEvents(client);
}

TcpProxySession.onTargetSocketEvent(
	TcpProxySession.Client* client,
	uint_t syncId,
	io.SocketEvents triggeredEvents
	)
{
	if (syncId != client.m_targetSyncId)
		return;

	if (triggeredEvents & io.SocketEvents.IoError)
	{
		handleConnectError(client, client.m_targetSocket.m_ioError);
		disconnect(client);
		return;
	}

	if (triggeredEvents & io.SocketEvents.Connected)
	{
		m_logWriter.write(SocketLogRecordCode.ConnectCompleted);
		client.m_targetState = ConnectionState.Connected;

		if (client.m_targetPendingData.m_size)
		{
			m_logWriter.write(log.StdRecordCode.Tx, client.m_targetPendingData.m_p, client.m_targetPendingData.m_size);
			client.m_targetSocket.write(client.m_targetPendingData.m_p, client.m_targetPendingData.m_size);
			client.m_targetPendingData.clear();
		}

		if (client.m_clientState != ConnectionState.Connected)
		{
			client.m_targetSocket.blockingWait(io.SocketEvents.WriteBufferEmpty, Defaults.TxDisconnectTimeout);
			disconnect(client);
			return;
		}
	}

	if (triggeredEvents & io.SocketEvents.Disconnected)
	{
		for (;;) // read all the buffered data
		{
			size_t result = forwardDataFromClientToTarget(client);
			if (!result)
				break;
		}

		if (client.m_clientState == ConnectionState.Connected)
			client.m_clientSocket.blockingWait(io.SocketEvents.WriteBufferEmpty, Defaults.TxDisconnectTimeout);

		TcpDisconnectLogRecordParams params;
		params.m_address = m_targetAddress;
		params.m_flags = TcpDisconnectLogRecordFlags.Remote;

		if (triggeredEvents & io.SocketEvents.Reset)
			params.m_flags |= TcpDisconnectLogRecordFlags.Reset;

		m_logWriter.write(SocketLogRecordCode.Disconnected, &params, sizeof(params));
		disconnect(client);
		return;
	}

	if (triggeredEvents & io.SocketEvents.IncomingData)
		forwardDataFromTargetToClient(client);

	waitTargetSocketEvents(client);
}

TcpProxySession.onResolverEvent(
	uint_t syncId,
	io.HostNameResolverEvents triggeredEvents
	)
{
	if (syncId != m_resolverSyncId)
		return;

	if (triggeredEvents & io.HostNameResolverEvents.Error)
	{
		handleResolveError(m_resolver.m_error);
		return;
	}

	m_logWriter.write(
		SocketLogRecordCode.ResolveCompleted,
		m_resolver.m_addressTable,
		sizeof(io.SocketAddress)
		);

	m_targetAddress = m_resolver.m_addressTable[0];
	if (!m_targetAddress.m_port)
		m_targetAddress.m_port = m_connectionSocketPropertySet.m_remotePortProp.m_value;

	m_resolverState = ResolverState.Resolved;
}

size_t errorcode TcpProxySession.forwardDataFromTargetToClient(TcpProxySession.Client* client)
{
	size_t result = client.m_targetSocket.read(m_readBuffer.m_p, m_readBuffer.m_size);
	if (!result)
		return 0;

	setCurrentClient(client);
	m_logWriter.write(log.StdRecordCode.Rx, m_readBuffer.m_p, result);

	if (client.m_clientState != ConnectionState.Connected)
		client.m_clientSocket.write(m_readBuffer.m_p, result);

	return result;
}

size_t errorcode TcpProxySession.forwardDataFromClientToTarget(TcpProxySession.Client* client)
{
	printf("forwardDataFromClientToTarget\n");

	size_t result = client.m_clientSocket.read(m_readBuffer.m_p, m_readBuffer.m_size);
	if (!result)
		return 0;

	if (client.m_targetState != ConnectionState.Connected)
	{
		printf("   appending %d bytes\n", result);
		client.m_targetPendingData.append(m_readBuffer.m_p, result);
	}
	else
	{
		printf("   transmitting %d bytes\n", result);

		setCurrentClient(client);
		m_logWriter.write(log.StdRecordCode.Tx, m_readBuffer.m_p, result);
		client.m_targetSocket.write(m_readBuffer.m_p, result);
	}

	return result;
}

TcpProxySession.handleResolveError(std.Error const* error)
{
	m_logWriter.write(SocketLogRecordCode.ResolveError, error);
	m_resolver.cancel();
	m_resolverState = ResolverState.Error;
}

TcpProxySession.handleConnectError(
	TcpProxySession.Client* client,
	std.Error const* error
	)
{
	m_logWriter.write(SocketLogRecordCode.ConnectError, error);
	client.m_targetSocket.close();
	client.m_targetState = ConnectionState.Closed;
}

TcpProxySession.waitListenerSocketEvents()
{
	m_listenerSocket.wait(
		io.SocketEvents.IoError |
		io.SocketEvents.IncomingConnection,
		onListenerSocketEvent~(++m_listenerSyncId) @ m_pluginHost.m_mainThreadScheduler
		);
}

TcpProxySession.waitClientSocketEvents(TcpProxySession.Client* client)
{
	client.m_clientSocket.wait(
		io.SocketEvents.IoError |
		io.SocketEvents.IncomingData |
		io.SocketEvents.Disconnected |
		io.SocketEvents.Reset,
		onClientSocketEvent~(client, ++client.m_clientSyncId) @ m_pluginHost.m_mainThreadScheduler
		);
}

TcpProxySession.waitTargetSocketEvents(TcpProxySession.Client* client)
{
	io.SocketEvents eventMask = io.SocketEvents.IoError;

	if (client.m_targetState != ConnectionState.Connected)
		eventMask |= io.SocketEvents.Connected;
	else
		eventMask |=
			io.SocketEvents.IncomingData |
			io.SocketEvents.Disconnected |
			io.SocketEvents.Reset;

	client.m_targetSocket.wait(
		eventMask,
		onTargetSocketEvent~(client, ++client.m_targetSyncId) @ m_pluginHost.m_mainThreadScheduler
		);
}

reactor TcpProxySession.m_uiReactor
{
	m_title = $"TCP @ $(m_portCombo.m_editText) -> $(m_targetAddressCombo.m_editText)";
	m_actionTable[ActionId.Listen].m_text = m_listenerState ? "Stop Listening" : "Listen";
	m_actionTable[ActionId.Listen].m_icon = m_iconTable[m_listenerState ? IconId.StopListen : IconId.Listen];
	m_actionTable[ActionId.DisconnectAll].m_isEnabled = m_clientCount;
	m_statusPaneTable[StatusPaneId.ListenerState].m_text = m_listenerStateStringTable[m_listenerState];
	m_statusPaneTable[StatusPaneId.ClientCount].m_text = $"$m_clientCount client(s)";

	m_statusPaneTable[StatusPaneId.TargetAddress].m_text =
		m_resolverState == ResolverState.Resolving ? "Resolving..." :
		m_resolverState == ResolverState.Error ? "Resolve error" :
		m_resolverState == ResolverState.Resolved ? $"Target: %1"(m_targetAddress.getString()) :
		null;

	m_targetAddressCombo.m_backgroundColor = m_resolverState == ResolverState.Error ?
		ui.StdColor.PastelRed :
		ui.StdColor.White;
}

