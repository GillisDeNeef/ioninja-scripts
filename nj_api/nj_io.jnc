//.............................................................................

enum SocketKind
{
	Connection = 0,
	Listener,
	Udp
}

enum SocketState
{
	Closed = 0,
	Opened,
	Zombie,
	Listening,
	Connecting,
	Connected,
	PeerDisconnected,
}

enum SocketEvent
{
	ConnectCompleted,
	ConnectCancelled,
	ConnectError,
	Disconnected,
	IncomingData,
	IncomingConnection,
}

struct SocketEventParams
{
	SocketEvent m_eventKind;
	Socket* m_sender;
	jnc.Error const* m_error;
}

//. . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . .

class Socket
{
	intptr dconst m_fd;
	SocketKind dconst m_socketKind;
	SocketAddress const property m_address;
	SocketState dconst m_state;

	bool open (nullable SocketAddress const* address = null) throws;
	void close ();

	event m_onSocketEvent (SocketEventParams const* params);
}

//.............................................................................

opaque class ConnectionSocket: Socket
{
	SocketAddress const property m_peerAddress;

	bool connect (SocketAddress const* address) throws;

	size_t read (
		void* p,
		size_t size
		) throws;

	size_t write (
		void const* p,
		size_t size
		) throws;
}

//.............................................................................

opaque class ListenerSocket: Socket
{
	bool listen (size_t backLog = 0) throws; // 0 -- default

	ConnectionSocket* accept (nullable SocketAddress* address = null) throws;
}

//.............................................................................

opaque class UdpSocket: Socket
{
	size_t read (
		void* p,
		size_t size,
		SocketAddress* address
		) throws;

	size_t write (
		void const* p,
		size_t size,
		SocketAddress const* address
		) throws;
}

//.............................................................................

